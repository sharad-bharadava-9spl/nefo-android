<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/_5sdp"
                android:left="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:top="@dimen/_5sdp" />
            <solid android:color="@color/_E2EBF4" />
            <corners android:radius="7dip" />
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_5sdp"
        android:drawable="@drawable/ic_up_triangle"
        android:gravity="center|end"
        android:right="@dimen/_5sdp" />

    <item
        android:bottom="@dimen/_5sdp"
        android:drawable="@drawable/ic_down_triangle"
        android:gravity="center|end"
        android:right="@dimen/_5sdp"
        android:top="@dimen/_15sdp" />
</layer-list>